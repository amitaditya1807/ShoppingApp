<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>All Products</title>
  </head>
  <body
    style="
      background: radial-gradient(
        circle,
        rgba(238, 174, 202, 1) 0%,
        rgba(148, 187, 233, 1) 100%
      );
    "
  >
    <h1>All Products!</h1>
    <ul>
      <% for(let product of products) { %>
      <li style="background-color: rgb(244, 236, 236); color: greenyellow">
        <a href="/products/<%= product._id %>" style="color: green">
          <b><%= product.name %></b>
        </a>
      </li>
      <% } %>
    </ul>
    <button style="font-size: 15px; border: 2px solid yellow">
      <a href="/products/new" method="POST">Add</a>
    </button>
    <div style="text-align: center">
      <button><a href="/" method="GET">Home</a></button>
    </div>
  </body>
</html>
